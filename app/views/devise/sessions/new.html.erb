<main>
  <header>
    <h1>🏎️ admin.mmoutlet24.pl</h1>
    <p><small>🔐Panel administracyjny</small></p>
  </header>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <p>
      <%= f.label :email, "Adres email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "twoj@email.com" %>
    </p>

    <p>
      <%= f.label :password, "Hasło" %><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Wprowadź hasło" %>
    </p>

    <% if devise_mapping.rememberable? %>
      <p>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Zapamiętaj mnie" %>
      </p>
    <% end %>

    <p>
      <%= f.submit "Zaloguj się" %>
    </p>
  <% end %>

  <hr>

  <%= render "devise/shared/links" %>
</main>
